<div class='container rounded bg-white mb-5'>
    <div class='row'>
        <div class='col-md-3 border-right'>
            <div
                class='d-flex flex-column align-items-center text-center p-3 py-5'
            ><img
                    class='rounded-circle mt-5'
                    width='150px'
                    src='/img/avatars/unknown-avt.jpg'
                /><h4 class='font-weight-bold'>{{staff.fullName}}</h4><span
                    id='email-tag'
                    class='text-black-50'
                >{{user.email}}</span><span> </span></div>
        </div>
        <div class='col-md-5 border-right'>
            <div class='p-3 py-5'>
                <div
                    class='d-flex justify-content-between align-items-center mb-3'
                >
                    <h4 class='text-right'>Profile Settings</h4>
                </div>
                <form action="/staffs/{{staff.id}}?_method=PUT" method="POST">
                <div class='row mt-2'>
                    <div class='col-md-12'><label class='labels'>Full Name</label><input
                            type='text'
                            class='form-control'
                            name='fullName'
                            placeholder='full name'
                            value='{{staff.fullName}}'
                        /></div>
                </div>
                <div class='row mt-3'>
                    <div class='col-md-12'><label class='labels'>Mobile Number</label><input
                            type='number'
                            class='form-control'
                            name='phoneNumber'
                            placeholder='enter phone number'
                            value='{{staff.phoneNumber}}'
                        /></div>
                    <div class='col-md-12'><label class='labels'>Home Town</label><input
                            type='text'
                            class='form-control'
                            name='homeTown'
                            placeholder='enter home town'
                            value='{{staff.homeTown}}'
                        /></div>
                    <div class='col-md-12'><label class='labels'>Day of Birth</label><input
                            type='date'
                            {{!-- name='DoBB' --}}
                            class='form-control'
                            value='{{staff.DoB}}'
                        /></div>
                    <div class='col-md-12'>
                        <label for='departmentId' class='form-label'>Sex</label>
                        <select name='sex' class='form-select' id='sex'>
                            <option value="{{staff.sex}}" selected>{{staff.sex}}</option>
                            <option value='Nam'>Nam</option>
                            <option value='Nu'>Nu</option>
                            <option value='Khac'>Khac</option>
                        </select>
                    </div>

                    <div class='col-md-12'><label
                            class='labels'
                        >Nation</label><input
                            type='text'
                            name='nation'
                            class='form-control'
                            placeholder='enter nation'
                            value='{{staff.nation}}'
                        /></div>
                    <div class='col-md-12'><label class='labels'>Graduation Date</label><input
                            type='date'
                            class='form-control'
                            {{!-- name="graduationDate" --}}
                            value='{{staff.graduationDate}}'
                        /></div>
                    <div class='col-md-12'><label
                            class='labels'
                        >University</label><input
                            type='text'
                            name="university"
                            class='form-control'
                            placeholder='university'
                            value='{{staff.university}}'
                        /></div>
                </div>
                <div class='row mt-3'>
                    <div class='col-md-6'><label
                            class='labels'
                        >Country</label><input
                            type='text'
                            class='form-control'
                            placeholder='country'
                            value=''
                        /></div>
                    <div class='col-md-6'><label
                            class='labels'
                        >State/Region</label><input
                            type='text'
                            class='form-control'
                            value=''
                            placeholder='state'
                        /></div>
                </div>
                <div class='mt-5 text-center'><button
                        class='btn btn-primary profile-button'
                        type='submit'
                        
                    >Save Profile</button></div>
                </form>
            </div>
        </div>
        <div class='col-md-4'>
            <div class='p-3 py-5'>
                <div class='col-md-12'><label class='labels'>Experience in
                        University</label><input
                        type='text'
                        class='form-control'
                        placeholder='experience'
                        value='{{staff.literacyId}}'
                    /></div>
                <br />
                <div class='col-md-12'><label class='labels'>Position</label><input
                        type='text'
                        class='form-control'
                        placeholder='additional details'
                        value='{{staff.position}}'
                    /></div>
            </div>
        </div>
    </div>
</div>

